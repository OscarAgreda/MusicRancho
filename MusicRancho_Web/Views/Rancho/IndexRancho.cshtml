@model IEnumerable<MusicRancho_Web.Models.Dto.RanchoDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Rancho List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Rancho" asp-action="CreateRancho" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Rancho</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Occupany
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td>@item.Name</td>
					<td>@item.Occupancy</td>
					<td>@((item.Rate).ToString("c"))</td>
					<td>
						<a asp-controller="Rancho" asp-action="UpdateRancho" asp-route-ranchoId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Rancho" asp-action="DeleteRancho" asp-route-ranchoId="@item.Id"  class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
    </table>

</div>